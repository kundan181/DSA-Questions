#include <bits/stdc++.h> 
void sort012(int *arr, int n)
{
   //   Write your code here
    int c1=0,c2=0,c3=0;
    for(int i=0; i<n; i++)
    {
        if(arr[i]==0)
        {
            c1++;
        }else if(arr[i]==1){
            c2++;
        }
        else if(arr[i]==2){
            c3++;
        }
    }
    int k=0;
    for(int i=0;i<c1;i++){
        arr[k++]=0;
    }
    for(int i=0;i<c2;i++){
        arr[k++]=1;
    }
    for(int i=0;i<c3;i++){
        arr[k++]=2;
    }
}
